<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mobile_dev_project">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app_icon_complete"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_icon_complete_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mobile_Dev_Project">
        <!--
        bron locking screen:
        lecture snippets. (2014, 16 november). Android: Locking Screen Orientation [Video]. YouTube.
        https://www.youtube.com/watch?v=SgpbZSRoEqk&ab_channel=lecturesnippets
        !-->
        <activity android:name=".Website"></activity>
        <activity android:name=".InfoPage"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".Party"
            android:label="@string/Feesten_label"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Horeca"
            android:label="@string/label_horeca"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Toerisme"
            android:label="@string/label_toerisme"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".NieuwsTablad"
            android:label="@string/label_nieuws"
            android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>