<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NieuwsTablad">

    <TextView
        android:id="@+id/Bekend_subtitel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/titel_1"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Bekend_Artikel1" />

    <TextView
        android:id="@+id/Bekende_PLaats_HoofdTitel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="@string/nieuws"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Bekend_Artikel1"
        android:layout_width="99dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/foto_artikel1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Bekende_PLaats_HoofdTitel"
        tools:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/Bekend_tekst2"
        android:layout_width="350dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="@string/NieuwsTab_tekst"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Bekend_subtitel2" />

    <ImageView
        android:id="@+id/Bekend_Artikel2"
        android:layout_width="98dp"
        android:layout_height="94dp"
        android:layout_marginTop="28dp"
        android:contentDescription="@string/nieuws_artikel2"
        app:layout_constraintTop_toBottomOf="@+id/Bekend_tekst2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="17dp"
        tools:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/Bekend_subtitel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/titel_2"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/Bekend_Artikel2"
        app:layout_constraintTop_toBottomOf="@+id/Bekend_Artikel2" />

    <TextView
        android:id="@+id/Bekend_tekst1"
        android:layout_width="350dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/NieuwsTab_tekst"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Bekend_subtitel1" />

</androidx.constraintlayout.widget.ConstraintLayout>